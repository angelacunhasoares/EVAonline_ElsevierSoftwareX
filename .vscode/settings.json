{
    "git.ignoreLimitWarning": true,
    // Configurações para testes Python
    "python.testing.pytestArgs": [
        "tests",
        "-v",
        "--tb=short"
    ],
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,
    "python.testing.cwd": "${workspaceFolder}/backend",
    "python.testing.pytestPath": "${workspaceFolder}/.venv/Scripts/python.exe",
    // Configurações do Python Test Explorer
    "testExplorer.useNativeTesting": true,
    "testExplorer.addToEditorContextMenu": true,
    "testExplorer.showOnRun": true,
    "testExplorer.sort": "byLocation",
    "testExplorer.mergeSuites": false,
    "testExplorer.onStart": "retire",
    "testExplorer.onReload": "retire",
    "testExplorer.errorDecoration": true,
    "testExplorer.infoDecoration": true,
    "testExplorer.warnDecoration": true,
    "testExplorer.codeLens": true,
    "testExplorer.gutterDecoration": true,
    // Configurações do Pytest IntelliSense
    "pytestExplorer.testExplorer": true,
    "pytestExplorer.cwd": "${workspaceFolder}/backend",
    "pytestExplorer.args": [
        "--tb=short",
        "--strict-markers"
    ],
    "pytestExplorer.env": {
        "PYTHONPATH": "${workspaceFolder}/backend"
    },
    // Configurações gerais do Python
    "python.defaultInterpreterPath": "${workspaceFolder}/.venv/Scripts/python.exe",
    "python.terminal.activateEnvironment": true,
    // Associações de arquivos
    "files.associations": {
        "*.py": "python",
        "conftest.py": "python",
        "test_*.py": "python"
    },
    // Linting e formatação
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": true,
    "python.linting.flake8Enabled": false,
    "python.formatting.provider": "black",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.organizeImports": "explicit"
    },
    // Configurações do Redis for VS Code
    "redis-for-vscode.connections": [
        {
            "name": "EVAonline Redis (Docker)",
            "host": "localhost",
            "port": 6379,
            "password": "evaonline",
            "database": 0,
            "timeout": 10000,
            "showNamespace": true,
            "namespaceSeparator": ":",
            "keyPrefix": "",
            "autoConnect": false,
            "username": ""
        }
    ],
    "redis-for-vscode.scanLimit": 10000,
    "redis-for-vscode.showKeySize": true,
    "redis-for-vscode.showKeyType": true,
    "redis-for-vscode.confirmDelete": true,
    "redis-for-vscode.formatJson": true,
    "redis-for-vscode.connectionView": "tree",
    "redis-for-vscode.defaultTimeout": 5000
}